
import java.util.ArrayList;

public class Solution {
	public static int maximumProduct(ArrayList<Integer> arr, int n) {
		// Write your code here.
		 int l=1,r=1,res=Integer.MIN_VALUE;
        for(int i=0;i<n;i++){
            if(l==0) 
				l=1;
            if(r==0) 
				r=1;
            l=l*arr.get(i);
            r=r*arr.get(n-1-i);
            res=Math.max(res,Math.max(l,r));
        }
        return res;
	}
}
